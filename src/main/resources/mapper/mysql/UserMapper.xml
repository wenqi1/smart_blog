<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.learn.blog.dao.UserDao" >

    <select id="queryUserByPhone" resultType="com.learn.blog.model.User">
        select * from wq_user where phone = #{phone}
    </select>

    <select id="queryUserByUsername" resultType="com.learn.blog.model.User">
        select * from wq_user where name = #{name}
    </select>

    <update id="updateUserInfo" parameterType="com.learn.blog.model.User">
        update user
        <set>
            <if test="userPassword != null">
                user_password = #{userPassword, jdbcType=VARCHAR},
            </if>
            <if test="userEmail != null">
                user_email = #{userEmail, jdbcType=VARCHAR},
            </if>
        </set>
        WHERE user_id = #{userId, jdbcType=INTEGER}
    </update>

</mapper>